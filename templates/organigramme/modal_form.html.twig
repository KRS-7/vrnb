    <div class="modal-content">
        <div class="modal-body">
            {{ modalContent|default('Loading...') }}
        </div>
        <div class="modal-header">
            <h5 class="modal-title">{{ modalTitle }}</h5>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary"
